rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USER DATA ---

    // This rule allows an authenticated user to read and write THEIR OWN user document.
    // The path `/users/{userId}` is matched, and the condition checks if the requester's UID
    // is the same as the `userId` in the path.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule secures the subcollection of uploaded files. It ensures a user can only
    // access files stored under their own user document.
    match /users/{userId}/uploadedFiles/{fileId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }


    // --- PUBLIC MCQ DATA ---

    // The following rules make the MCQ collections publicly readable by anyone,
    // but writable by no one. This is suitable for shared quiz content.
    match /mcqs_foundation/{mcqId} {
      allow read, list: if true;
      allow write: if false;
    }

    match /mcqs_intermediate/{mcqId} {
      allow read, list: if true;
      allow write: if false;
    }

    match /mcqs_final/{mcqId} {
      allow read, list: if true;
      allow write: if false;
    }
  }
}
