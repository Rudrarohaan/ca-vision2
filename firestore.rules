rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USER DATA ---

    // Rule for individual user documents.
    match /users/{userId} {
      // Allow a user to get, create, update, and delete their own document.
      allow get, create, update, delete: if request.auth.uid == userId;
      
      // Explicitly deny list access to the entire /users collection for security.
      allow list: if false;
    }

    // Rule for files uploaded by a user.
    match /users/{userId}/uploadedFiles/{fileId} {
      // Allow a user to perform any action on files within their own folder.
      allow read, write: if request.auth.uid == userId;
    }


    // --- PUBLIC MCQ DATA ---

    // The following rules make the MCQ collections publicly readable by anyone,
    // but writable by no one. This is suitable for shared quiz content.
    match /mcqs_foundation/{mcqId} {
      allow read: if true;
      allow write: if false;
    }

    match /mcqs_intermediate/{mcqId} {
      allow read: if true;
      allow write: if false;
    }

    match /mcqs_final/{mcqId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
